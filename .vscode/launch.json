{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-s",
                "camb/tests",
                "-p",
                "*_test.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Run camb_test.py",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "camb.tests.camb_test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}
